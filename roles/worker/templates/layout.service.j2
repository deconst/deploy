# {{ ansible_managed }}

[Unit]
Description=Deconst Layout Service Launcher
Requires=docker.service

[Service]
ExecStartPre=/usr/bin/docker kill layout-service-{{ item[0] }}
ExecStartPre=/usr/bin/docker rm layout-service-{{ item[0] }}
ExecStart=/usr/bin/docker run \
  --detach \
  --name=layout-service-{{ item[0] }} \
  --env=CONTROL_REPO_URL={{ control_repository_url }} \
  --env=CONTROL_REPO_BRANCH={{ control_repository_branch }} \
  --env=LAYOUT_LOG_LEVEL={{ layout_log_level }} \
  --publish={{ 8992 + 10 * item[0]|int }}:8080 \
  --restart={{ restart }} \
  quay.io/deconst/layout-service

[Install]
WantedBy=multi-user.target
